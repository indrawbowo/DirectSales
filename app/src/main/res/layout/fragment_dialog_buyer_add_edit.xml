<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_layout_add_buyer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtFullNameAddEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:hint="Nama Lengkap"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1" />

                <ImageButton
                    android:id="@+id/btn_scan_name_add_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_scan" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/rgGenderAddEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbLakilakiAddEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Laki-Laki" />

                <RadioButton
                    android:id="@+id/rbPerempuanAddEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Perempuan" />
            </RadioGroup>

            <EditText
                android:id="@+id/txtEmailAddEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtDomisiliAddEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Domisili"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1" />

                <ImageButton
                    android:id="@+id/btn_scan_domisili_add_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_scan" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtAddressAddEdit"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:hint="Alamat"
                    android:inputType="textMultiLine" />

                <ImageButton
                    android:id="@+id/btn_scan_address_add_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/ic_scan" />
            </LinearLayout>

            <EditText
                android:id="@+id/txtPhoneNumberAddEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1" />

            <EditText
                android:id="@+id/txtNotesAddEdit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:hint="Notes"
                android:inputType="textMultiLine" />

            <ImageView
                android:id="@+id/ivPhotoAddEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/man_user" />

            <Button
                android:id="@+id/btnChoosePhotoAddEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Photo" />

            <Button
                android:id="@+id/btnEditBuyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit" />


        </LinearLayout>


    </RelativeLayout>
</ScrollView>